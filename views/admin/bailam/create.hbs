{{#section 'title'}}
<b>Add Bài làm</b>
{{/section}} 

{{#if showResult}}
<div class="alert alert-success">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	<strong>OK!</strong> Bài làm added.
</div>
{{/if}}

<div class="container-fluid">
	<form method="POST" role="form" action="add" enctype="multipart/form-data">
		<div class="form-group">
			<label for="">Mã đề thi</label>
			<input type="text" class="form-control" name="MaDeThi" >
		</div>
		
		<div class="form-group">
			<label for="">Mã người dùng</label>
			<input type="text" class="form-control" name="MaNguoiDung" >
		</div>
		<div class="form-group">
			<label for="">Số câu làm</label>
			<input type="text" class="form-control" name="SoCauLam" >
		</div>
		<div class="form-group">
			<label for="">Số câu đúng</label>
			<input type="text" class="form-control" name="SoCauDung">
		</div>
		

		
		<a class="btn btn-default" href="/admin/bailam" role="button">
			<span class="glyphicon glyphicon-arrow-left"></span>
			Trở về
		</a>
		<button type="submit" class="btn btn-primary">
			<span class="glyphicon glyphicon-ok"></span>
			Thêm
		</button>
		<br>
		<br>
		<br>
		<br>
	</form>
</div>