{{#section 'title'}}
<b>Add Question</b>
{{/section}} 

{{#if showResult}}
<div class="alert alert-success">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	<strong>OK!</strong> Question added.
</div>
{{/if}}

<div class="container-fluid">
	<form method="POST" role="form" action="add" enctype="multipart/form-data">
		<div class="form-group">
			<label for="">Mã đề thi</label>
			<select name="MaDeThi" class="form-control">
				{{#each vm.dethi_list}}
					<option value="{{MaDeThi}}">{{MaDeThi}}</option>
					{{/each}}
			</select>
		</div>
		<div class="form-group">
			<label for="">Nội dung</label>
			<input type="text" class="form-control" name="NoiDung" placeholder="Nội dung câu hỏi">
		</div>
		<div class="form-group">
			<label for="">Hình minh họa</label>
			<input type="file" class="form-control" name="HinhMinhHoa">
		</div>
		<div class="form-group">
			<label for="">Môn học</label>
			<select name="MaMonHoc" class="form-control">
				{{#each subject}}
				<option value="{{MaMonHoc}}">{{TenMonHoc}}</option>
				{{/each}}
			</select>
		</div>

		<div class="form-group">
			<label for="">Đáp án đúng</label>
			<select name="DapAnDung" class="form-control">
				<option value="A">A</option>
				<option value="B">B</option>
				<option value="C">C</option>
				<option value="D">D</option>
			</select>
		</div>
		<a class="btn btn-default" href="/admin/cauhoi" role="button">
			<span class="glyphicon glyphicon-arrow-left"></span>
			Trở về
		</a>
		<button type="submit" class="btn btn-primary">
			<span class="glyphicon glyphicon-ok"></span>
			Thêm
		</button>
		<br>
		<br>
		<br>
		<br>
	</form>
</div>