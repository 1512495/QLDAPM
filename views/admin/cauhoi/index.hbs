{{#section 'title'}}
    <b>Câu Hỏi</b>
{{/section}}

<div class="container" style="width: 97%">
	<div class="row">
		<div class="col-sm-12 col-md-12 col-lg-12">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Mã câu hỏi</th>
						<th>Mã đề thi</th>
						<th>Nội Dung</th>
						<th>Hình ảnh</th>
						<th>Mã môn học</th>
						<th>Ngày Tạo</th>
						<th>Đáp án đúng</th>
						<th>&nbsp;</th>
					</tr>
				</thead>
				<tbody>
					{{#each vm.cauhois}}
					<tr>
						<td>{{MaCauHoi}}</td>
						<td>{{MaDeThi}}</td>
						<td>{{NoiDung}}</td>
						<td>{{HinhMinhHoa}}</td>
						<td>{{MaMonHoc}}</td>
						<td>{{NgayTao}}</td>
						<td>{{DapAnDung}}</td>
						<td class="text-right">
							<a class="btn btn-default btn-xs" href="/admin/cauhoi/delete?id={{MaCauHoi}}" role="button" onclick="return confirm('Bạn có muốn xóa hay không')">
								<span class="glyphicon glyphicon-remove"></span>
							</a>
							<a class="btn btn-default btn-xs" href="/admin/cauhoi/update?id={{MaCauHoi}}" role="button">
								<span class="glyphicon glyphicon-pencil"></span>
							</a>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
	
	<div >
		<a class="btn btn-success" href="cauhoi/add" role="button">
			<span class="glyphicon glyphicon-plus"></span>
			Add
		</a>
	</div>
</div>