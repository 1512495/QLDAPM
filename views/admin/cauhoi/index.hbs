{{#section 'title'}}
<b>Questions</b>
{{/section}}
<div class="container" style="width: 100%">
	<div class="row">
		<div class="col-sm-6 col-md-6 col-lg-6">
			<a class="btn btn-success" href="/admin/cauhoi/create" role="button">
				<span class="glyphicon glyphicon-plus"></span>
				Add
			</a>
		</div>
	</div>
	<div class="row">
		<div>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>ID</th>
						<th>Nội dung</th>
						<th>Hình minh họa</th>
						<th>Mã môn học</th>
						<th>Số lần thi</th>
						<th>Số lần đúng</th>
						<th>Ngày tạo</th>
						<th>Đáp án đúng</th>
						<th>&nbsp;</th>
					</tr>
				</thead>
				<tbody>
					{{#each questions}}
					<tr>
						<td>{{MaCauHoi}}</td>
						<td>{{NoiDung}}</td>
						{{#if HinhMinhHoa}}
						<td>
							<img src="../../images/{{HinhMinhHoa}}" width="100px" height="100px">
						</td>
						{{else}}
						<td>Không có</td>
						{{/if}}
						<td>{{MaMonHoc}}</td>
						<td>{{SoLanThi}}</td>
						<td>{{SoLanDung}}</td>
						<td>{{NgayTao}}</td>
						<td>{{DapAnDung}}</td>
						<td class="text-right">
							<a class="btn btn-default btn-xs" onclick="return confirm('Bạn có muốn xóa hay không?')" href="/admin/cauhoi/delete/?id={{MaCauHoi}}">
								<span class="glyphicon glyphicon-remove"></span>
							</a>
							<a class="btn btn-default btn-xs" href="/admin/cauhoi/update/?id={{MaCauHoi}}" role="button">
								<span class="glyphicon glyphicon-pencil"></span>
							</a>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>

</div>
<br>
<br>
<br>
<br> {{#if pagination}}
<div class="text-center">
	<ul class="pagination text-center">
		{{#with firstPage}} {{#if isFirstPage}}
		<li class="page-item disabled">
			<a class="page-link" href="javascript:;">Previous</a>
		</li>
		{{else}}
		<li class="page-item ">
			<a class="page-link" href="?page={{value}}">Previous</a>
		</li>
		{{/if}} {{/with}} {{#each page_numbers}} {{#if isCurPage}}
		<li class="page-item active">
			<a class="page-link" href="javascript:;">{{value}}</a>
		</li>
		{{else}}
		<li class="page-item ">
			<a class="page-link" href="?page={{value}}">{{value}}</a>
		</li>
		{{/if}} {{/each}} {{#with lastPage}} {{#if isLastPage}}
		<li class="page-item disabled">
			<a class="page-link" href="#">Next</a>
		</li>
		{{else}}
		<li class="page-item">
			<a class="page-link" href="?page={{value}}">Next</a>
		</li>
		{{/if}} {{/with}}
	</ul>
</div>
{{/if}}