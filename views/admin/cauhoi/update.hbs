{{#section 'title'}}
<b>Update Question</b>
{{/section}} {{#if showResult}}
<div class="alert alert-success">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	<strong>OK!</strong> Question updated.
</div>
{{/if}}

<div class="container-fluid">
	<form method="POST" role="form" enctype="multipart/form-data">

		{{#with question}}
		<div class="form-group">
			<label for="">Nội dung</label>
			<input type="text" class="form-control" name="NoiDung" value="{{NoiDung}}" placeholder="Nội dung câu hỏi">
		</div>
		<div class="form-group">
			<label for="">Hình minh họa</label>
			<div>
				<img src="../../../images/{{HinhMinhHoa}}" width="100px" height="100px">
			</div>
		</div>
		<div class="form-group">
			<label for="">Bạn muốn cập nhật lại hình?</label>
			<input type="file" class="form-control" name="HinhMinhHoa">
		</div>

		<div class="form-group">
			<label for="">Môn học</label>
			<select name="MaMonHoc" class="form-control">

				<option value="1" {{{select MaMonHoc 1}}}>Toán</option>
				<option value="2" {{{select MaMonHoc 2}}}>Anh</option>
				<option value="3" {{{select MaMonHoc 3}}}>Văn</option>


			</select>
		</div>
		<div class="form-group">
			<label for="">Số lần thi</label>
			<input type="number" class="form-control" name="SoLanThi" value="{{SoLanThi}}">
		</div>

		<div class="form-group">
			<label for="">Số lần đúng</label>
			<input type="number" class="form-control" name="SoLanDung" value="{{SoLanDung}}">
		</div>
		<div class="form-group">
			<label for="">Đáp án đúng</label>
			<select name="DapAnDung" class="form-control">
				<option value="A" {{{select DapAnDung 'A'}}}>A</option>
				<option value="B" {{{select DapAnDung 'B'}}}>B</option>
				<option value="C" {{{select DapAnDung 'C'}}}>C</option>
				<option value="D" {{{select DapAnDung 'D'}}}>D</option>
			</select>
		</div>
		<a class="btn btn-default" href="/admin/cauhoi/" role="button">
			<span class="glyphicon glyphicon-arrow-left"></span>
			Trở về
		</a>
		<button class="btn btn-primary">
			<span class="glyphicon glyphicon-ok"></span>
			Cập nhật
		</button>
		<br>
		<br>
		<br>
		<br> {{/with}}
	</form>
</div>