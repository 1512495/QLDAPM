{{#section 'title'}}
<b>Add Đáp án</b>
{{/section}} 

{{#if showResult}}
<div class="alert alert-success">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	<strong>OK!</strong> Đáp án added.
</div>
{{/if}}

{{#with vm.dapan}}
<div class="container-fluid">
	<form method="post" role="form" action="update" >
		<div class="form-group">
			<label for="">Mã đáp án</label>
			<input type="text" class="form-control" name="MaDapAn" value="{{MaDapAn}}" readonly>
		</div>
		<div class="form-group">
			<label for="">Ma Cau Hoi</label>
			<input type="text" class="form-control" name="MaCauHoi" value="{{MaCauHoi}}">
		</div>
		<div class="form-group">
			<label for="">A</label>
			<input type="text" class="form-control" name="A" value="{{A}}">
		</div>
		<div class="form-group">
			<label for="">B</label>
			<input type="text" class="form-control" name="B" value="{{B}}">
		</div>
		<div class="form-group">
			<label for="">C</label>
			<input type="text" class="form-control" name="C" value="{{C}}">
		</div>
		<div class="form-group">
			<label for="">D</label>
			<input type="text" class="form-control" name="D" value="{{D}}">
		</div>
		<a class="btn btn-default" href="/admin/dapan" role="button">
			<span class="glyphicon glyphicon-arrow-left"></span>
			Trở về
		</a>
		<button type="submit" class="btn btn-primary">
			<span class="glyphicon glyphicon-ok"></span>
			Update
		</button>
		<br>
		<br>
		<br>
		<br>
	</form>
</div>
{{/with}}