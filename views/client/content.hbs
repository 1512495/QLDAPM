<script>
	function start() {
		$('#confirm').hide();
		$('#noiDung').show();
		seconds = new Date().getTime() + 100000;
		$('#clock').countdown(seconds, { elapse: false })
			.on('update.countdown', function (event) {
				var $this = $(this);
				$this.html(event.strftime('<div> Thời gian còn lại để làm bài: <span>%H:%M:%S</span></div>'));
			})
			.on('finish.countdown', function () {
				nopBai();
			});;
	}

	function stop() {
		$('#noiDung').hide();
		$('#end').show();
		$('#clock').hide();
	}

	function select(event) {
		let base = event.target.id.split('_')[0];

		let strA = base + '_a';
		let strB = base + '_b';
		let strC = base + '_c';
		let strD = base + '_d';
		let str = [strA, strB, strC, strD];

		for (let i = 0; i < str.length; i++) {
			if ($('#' + str[i]).hasClass('selected_radio')) {
				$('#' + str[i]).removeClass('selected_radio');
				$('#' + str[i]).addClass('basic_radio');
			}
		}
		$('#' + event.target.id).addClass('selected_radio');
	}

	function nopBai() {
		let result = 0;
		$('.basic_radio').each(function (index, elem) {
			if ($(elem).hasClass('right_answer')) {
				if ($(elem).hasClass('selected_radio')) {
					result++;
				}
				$(elem).removeClass('right_answer');
				$(elem).removeClass('selected_radio');
				$(elem).removeClass('basic_radio');
				$(elem).addClass('right_radio');
			}
		});
		$('#nopBaiButton').attr('disabled', 'disabled');
		$('#clock').hide();
		$('#result').html("Số câu đúng là:" + result);
	}

</script>