 <!-- services -->
<div class="services">
      <h2>Sign Up</h2>
      <div class="services-grids">
            <div class="col-md-3"></div>
            <div class="col-md-6 login">
                  <form action="dangky" method="post" id="form_dangky">
                        <input class="login-form" type="text" id="TenNguoiDung" name="TenNguoiDung" placeholder="Tên đăng nhập" required=" ">
                        <input class="login-form" type="email" id="Email" name="Email" placeholder="Email của bạn" required=" " >
                        <input class="login-form" type="text" id="SDT" name="SDT" placeholder="Số điện thoại" required=" " onkeypress='return event.charCode >= 48 && event.charCode <= 57'>
                        <input class="login-form" type="password" id="MatKhau" name="MatKhau" placeholder="Mật khẩu" required=" ">
                        <input class="login-form" type="password" id="NhapLaiMatKhau" name="NhapLaiMatKhau" placeholder="Nhập lại mật khẩu" required=" ">
                        <button class="button-login" type="submit" id="btnDangKy">Đăng ký</button>
                  </form>
            </div>
            
            <div class="clearfix"> </div>
      </div>
      
</div>
<!-- //services -->

{{#section 'js'}}
      <script type="text/javascript">
            $('#NhapLaiMatKhau').on('keyup', function() {
                var mk = $('#MatKhau').val();
                var mk_again = $('#NhapLaiMatKhau').val();
                if(mk === mk_again) {
                    $('#btnDangKy').css("background-color","#03a9f4");
                    $('#btnDangKy').prop('disabled', false);
                } else {
                    $('#btnDangKy').css("background-color","white");
                    $('#btnDangKy').prop('disabled', true);
                }
            });

      </script>
{{/section}}